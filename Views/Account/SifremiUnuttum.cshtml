
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <style>
        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }

        .h-custom {
            height: calc(100% - 73px);
        }
        }
    </style>
</head>

<body style="background-color:cornflowerblue">

    <div class="card">
        <div class="card-body">
            <section class="vh-100">
                <div class="container-fluid h-custom">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-md-9 col-lg-6 col-xl-5">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                                 class="img-fluid" alt="Sample image">
                        </div>
                        <br /><br /><br />
                        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                            <form action="/Account/SifremiUnuttum" method="post">


                                <div class="divider d-flex align-items-center my-4">
                                    <h2 class="text-center fw-bold mx-3 mb-0" style="color:white">Kelime Oyunu</h2>
                                </div>
                                <br />
                                <div><p class="text-center mx-3 mb-0 bg-danger">@ViewBag.message</p></div>

                                <a href="https://localhost:44312/Account/Login" data-mdb-ripple-init class="btn btn-success"
                                   style="padding-left: 2.5rem; padding-right: 2.5rem; color:white">
                                    Geri
                                </a>
                                <br />
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example3">Mail</label>
                                    <input type="text" id="mail" name="mail" class="form-control form-control-lg"
                                           placeholder="Mailinizi giriniz" />
                                </div>
                                <br />

                                <div class="text-center text-lg-start mt-4 pt-2">
                                    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                            style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                        Yolla
                                    </button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>